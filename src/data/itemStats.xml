
<itemTypes>
    <type
        id="RESTORE"
        name="Restore"
        tooltip="Restores @1 health and @2 mana every 0.5s over @3 s. Only works outside combat."
        buyCost="4"
        unique="false"
        icon="items/clarityPotion.png">
