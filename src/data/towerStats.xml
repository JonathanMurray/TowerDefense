
<towerTypes>
    <type
        id="DROWSER"
        name="Drowser"
        tooltip="Basic tower."
        maxHealth="120"
        buildCost="10"
        unlockCost="0"
        sprite="towers/drowser.png"
        icon="towers/drowserIcon.png">
        <attack
            type="RANGED"
            baseDamage="5"
			randomDamage="3"
			cooldown="600"
			range="2.9"
			projectileSize="8"
			projectileColor="white"
			projectileSpeed="1"
			sound="iceSpell3.wav"
			soundVolume="1"
        />
    </type>

    <type
        id="ALAKAZAM"
        name="Alakazam"
        tooltip="Slows and sometimes stuns enemies. [x@1 speed, @2 chance to stun for @3 seconds]"
        maxHealth="90"
        buildCost="18"
        unlockCost="10"
        sprite="towers/alakazam.png"
        icon="towers/alakazamIcon.png">
        <links>
            <link>./attack/effect/effect[1]/buff/@multiplier</link>
            <link>./attack/effect/effect[2]/@stunChance</link>
            <link>./attack/effect/effect[2]/@duration</link>
        </links>
        <attack
           	type="RANGED_ACTION"
			baseDamage="8"
			randomDamage="20"
			cooldown="1900"
			range="4.3"
			projectileSize="16"
			projectileColor="red"
			projectileSpeed="1.3"
			sound="pop.wav"
			soundVolume="1">
			<effect
			    type="COMPOSITE">
		       	<effect
					type="RECEIVE_BUFF">
					<buff
						buffId="ALAKAZAM_SLOW"
						type="ATTRIBUTE_MULTIPLIER"
						attribute="MOVEMENT_SPEED"
						multiplier="0.5"
						duration="1.9"/>
				</effect>
				<effect
					type="STUN"
					duration="1"
					stunChance="0.35"
					postStunImmunity="5000"
					stunBuffId="ALAKAZAM_STUN"/>
			</effect>
        </attack>
    </type>

    <type
        id="CHARIZARD"
        name="Charizard"
        tooltip="Sets target on fire, burning itself and nearby allies. [x@1 speed, @2 damage every @3 seconds]"
        maxHealth="250"
        buildCost="25"
        unlockCost="10"
        sprite="towers/charizard.png"
        icon="towers/charizardIcon.png">
        <links>
            <link>./attack/effect/buff/@multiplier</link>
            <link>./attack/effect/buff/effect/effect/@amount</link>
            <link>./attack/effect/buff/@cooldown</link>
        </links>
        <attack
           	type="RANGED_ACTION"
			baseDamage="5"
			randomDamage="14"
			cooldown="2000"
			range="1.8"
			projectileSize="13"
			projectileColor="red"
			projectileSpeed="1"
			sound="flameArrow3.wav"
			soundVolume="1.6">

            <effect
                type="RECEIVE_BUFF">
             	<buff
             	    buffId="CHARIZARD_DAMAGE_BUFF"
                	type="REPEAT_EFFECT_ON_SELF"
                	duration="5"
                	cooldown="0.5">
             	    <effect
             	        type="AOE_EFFECT"
             	        range="2.3"
             	        targetTeam="EVIL">
             	        <effect
             	            type="LOSE_HEALTH"
             	            amount="3"
             	            ignoreArmor="true">
             	            <animation>
			            	    <image>abilities/fire.png</image>
			            	</animation>
             	        </effect>
             	    </effect>
             	</buff>
           	</effect>
        </attack>
    </type>

    <type
        id="ZUBAT"
        name="Zubat"
        tooltip="Attacked enemies are cursed for @3 seconds, leeching health to the hero [1dmg/@1s, 1hp/@2s], and getting weaker armor [x@4]"
        maxHealth="200"
        buildCost="45"
        unlockCost="20"
        sprite="towers/batTower.gif"
        icon="towers/batIcon.gif">
        <links>
            <link>./attack/effect/buff/buff[1]/@damageCooldown</link>
            <link>./attack/effect/buff/buff[1]/@healingCooldown</link>
            <link>./attack/effect/buff/buff[1]/@duration</link>
            <link>./attack/effect/buff/buff[2]/@multiplier</link>
        </links>
        <attack
           	type="RANGED_ACTION"
			baseDamage="0"
			randomDamage="1"
			cooldown="900"
			range="3"
			projectileSize="16"
			projectileColorR="0"
			projectileColorG="0.5"
			projectileColorB="0.2"
			projectileSpeed="2"
			sound="iceSpell3.wav"
			soundVolume="1">
        	<effect
        	    type="RECEIVE_BUFF">
            	<buff
            		type="COMPOSITE">
	            	<buff
	            	    type="LEECH"
	            	    buffId="ZUBAT_BUFF"
	            	    damageCooldown="0.5"
	            	    healingCooldown="0.5"
	            	    duration="6">
		            	<animation>
						    <image>abilities/poison.png</image>
						</animation>
					</buff>
					<buff
						type="ATTRIBUTE_MULTIPLIER"
						multiplier="0.5"
						attribute="ARMOR"
						buffId="ZUBAT_RECEIVE_LESS_ARMOR"
						duration="6"/>
					</buff>
           	</effect>
        </attack>
    </type>

    <type
        id="JIGGLYPUFF"
        name="Jigglypuff"
        tooltip="Passive tower that slows nearby enemies. [x@1, range = @2]"
        maxHealth="100"
        buildCost="60"
        unlockCost="35"
        sprite="towers/jigglypuff.png"
        specialRangeLink="./buff/action/target/@range"
        icon="towers/jigglypuffIcon.png">
        <links>
            <link>./buff/action/effect/buff/@multiplier</link>
            <link>./buff/action/target/@range</link>
        </links>
        <buff
            type="REPEAT_ACTION"
            cooldown="0.5"
            buffId="JIGGLYBUFF_SLOW_AURA">
       		<action
       		    type="AFFECT_TARGETS">
       		    <target
       		        type="IN_RANGE"
       		        range="2.9"
       		        targetTeam="EVIL"/>
       		    <effect
       		        type="RECEIVE_BUFF">
       		        <buff
       		            type="ATTRIBUTE_MULTIPLIER"
       		            attribute="MOVEMENT_SPEED"
       		            multiplier="0.3"
       		            duration="0.5"
       		            buffId="JIGGLYPUFF_SLOW">
               	        <animation>
               	        	width="65"
		       	 	        height="65"
		       	 	        duration="160">
		       	 	        <image>abilities/blueBuff.png</image>
		       	 	        <image>abilities/blueBuff2.png</image>
               	        </animation>
           	        </buff>
       		    </effect>
       		</action>
       	</buff>

    </type>

    <type
        id="MACHAMP"
        name="Machamp"
        tooltip="Hard-hitting tower. AoE-effect: [@1 damage, @2 seconds stun, radius = @3]"
        maxHealth="350"
        buildCost="100"
        unlockCost="60"
        sprite="towers/machamp.gif"
        icon="towers/machampIcon.gif">
        <links>
            <link>./attack/effect/effect/effect[1]/@amount</link>
            <link>./attack/effect/effect/effect[2]/@duration</link>
            <link>./attack/effect/@range</link>
        </links>
        <attack
           	type="RANGED_ACTION"
			baseDamage="40"
			randomDamage="65"
			cooldown="2700"
			range="5.5"
			projectileSize="24"
			projectileColor="black"
			projectileSpeed="2"
			sound="bomb.wav"
			soundVolume="0.5">
        	<effect
				type="AOE_EFFECT"
				range="2.2"
				targetTeam="EVIL">
       		    <effect
       		        type="COMPOSITE">
	       		    <effect
	       		        type="LOSE_HEALTH"
						amount="30"
						ignoreArmor="false"/>
					<effect
					    type="STUN"
					    duration="0.7"/>
			    </effect>
		    </effect>
        </attack>
    </type>

</towerTypes>

